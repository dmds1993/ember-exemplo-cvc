{{#each accommodation.hotels as |hotel|}}
  <div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail image-hotels">
      <img src={{hotel.links.thumbnailImage.href}} alt="">
      <div class="caption">
        <h4 class="pull-right"></h4>
        <h4 class="name-hotel">{{#link-to 'hotelselect' hotel.id tagName="li"}}<a href="">{{hotel.name}}</a>{{/link-to}}
        </h4>
        <p class="hotel-description">{{hotel.description}}</p>
      </div>
      <div class="ratings">
        <p class="pull-right">15 reviews</p>
        <p>
          <span class="glyphicon glyphicon-star"></span>
          <span class="glyphicon glyphicon-star"></span>
          <span class="glyphicon glyphicon-star"></span>
          <span class="glyphicon glyphicon-star"></span>
          <span class="glyphicon glyphicon-star"></span>
        </p>
      </div>
    </div>
  </div>
{{/each}}
